{
  "name": "ltip",
  "version": "0.1.0",
  "private": true,
  "description": "Legislative Tracking Intelligence Platform - Neutral analysis of federal and state legislation",
  "keywords": [
    "legislation",
    "congress",
    "voting",
    "transparency",
    "machine-learning"
  ],
  "license": "MIT",
  "author": "LTIP Team",
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "turbo run db:migrate --filter=api",
    "db:seed": "turbo run db:seed --filter=api",
    "db:reset": "turbo run db:reset --filter=api",
    "docs:pdf": "scripts/generate-docs.sh pdf",
    "docs:word": "scripts/generate-docs.sh word",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "turbo": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
