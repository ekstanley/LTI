{
  "extends": "@ltip/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ltip/shared": ["../../packages/shared/src"],
      "@ltip/shared/validation": ["../../packages/shared/src/validation"],
      "@ltip/shared/*": ["../../packages/shared/src/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx", "src/__tests__"]
}
